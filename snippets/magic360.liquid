{% if product.media.size > 0 %}

    {% assign still_images_count = product.media.size | minus: Magic360ImageCount %}
    {% if still_images_count < 0 %}
    {% assign still_images_count = 0 %}
    {% endif %}
  
  

    {% assign m360ImagesSmall = '' %}
    {% assign m360ImagesLarge = '' %}
    {% assign m360Images0 = '' %}
    {% for image in product.media %}
        {% if forloop.index > still_images_count %}
            {% if m360Images0 == '' %}
                {% assign m360Images0 = image %}
            {% endif %}
            {% assign url = image | image_url: width: MagicToolboxThumbnailImageSize%}
            {% assign m360ImagesSmall = m360ImagesSmall | append: url | append: ';' %}
            {% assign url = image | image_url: width: MagicToolboxBigImageSize %}
            {% assign m360ImagesLarge = m360ImagesLarge | append: url | append: ';' %}
        {% endif %}
    {% endfor %}

    {% if MagicToolboxSortImages == 'Yes' %}
        {% assign m360ImagesSmall = m360ImagesSmall | split: ';' | sort %}
        {% assign m360ImagesLarge = m360ImagesLarge | split: ';' | sort %}
    {% else %}
        {% assign m360ImagesSmall = m360ImagesSmall | split: ';' %}
