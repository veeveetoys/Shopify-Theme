        {% assign MagicToolbox360IconURLFull = m360Images0 | image_url: width: MagicToolboxSelectorImageSize %}
      {% else %}
        {% assign MagicToolbox360IconURLFull = MagicToolbox360IconURL | asset_img_url: MagicToolbox360IconSize %}
        
      {% endif %}
    {% endif %}
  
